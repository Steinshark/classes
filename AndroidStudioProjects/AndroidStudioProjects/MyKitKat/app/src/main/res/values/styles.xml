<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="calcButton" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">#c3c3c3</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:layout_margin">2sp</item>
        <item name = "android:background">@drawable/buttonround</item>
    </style>
    <style name="numButton" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">@color/darkGray</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:layout_margin">2sp</item>
        <item name = "android:background">@drawable/buttonround</item>

    </style>
    <style name="calcButtonLand">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">@color/black</item>
        <item name = "android:fontFamily">sans-serif</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/cardview_dark_background</item>
        <item name = "android:textSize">30sp</item>
    </style>
    <style name="outputText">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:layout_weight">.18</item>
        <item name = "android:textSize">65sp</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:background">@color/black</item>

    </style>
    <style name="sideCalcButton">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">#f59b42</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:layout_margin">2sp</item>
        <item name = "android:background">@drawable/buttonround</item>
    </style>

    <style name="contrainedButton" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:background">@drawable/buttonround</item>
        <item name = "android:layout_margin">5dp</item>
    </style>
    <style name="contrainedButtonRight" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:background">@drawable/buttonround</item>
        <item name = "android:layout_margin">5dp</item>
        <item name = "android:backgroundTint">#f59b42</item>
    </style>
    <style name="contrainedButtonTop"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:background">@drawable/buttonround</item>
        <item name = "android:layout_margin">5dp</item>
        <item name = "android:backgroundTint">#c3c3c3</item>
        <item name = "app:backgroundTint">#c3c3c3</item>
    </style>

</resources>