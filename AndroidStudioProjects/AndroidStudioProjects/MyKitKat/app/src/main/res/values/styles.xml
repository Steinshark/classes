<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="calcButton">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">@color/darkGray</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:layout_margin">2sp</item>

    </style>

    <style name="calcButtonLand">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">0dp</item>
        <item name = "android:backgroundTint">@color/black</item>
        <item name = "android:fontFamily">sans-serif</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">@color/cardview_dark_background</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:layout_margin">2sp</item>

    </style>

    <style name="outputText">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:layout_weight">.18</item>
        <item name = "android:textSize">50sp</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:fontFamily">sans-serif-black</item>
        <item name = "android:background">@color/lightGray</item>
        <item name = "android:layout_margin">2sp</item>

    </style>
</resources>