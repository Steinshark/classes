<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >


    <TextView
        style="@style/outputText"
        android:text="@string/calcOutput"
        android:id="@+id/outputText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        >
        <TextView
            android:text=""
            style="@style/calcButtonLand"
            android:layout_weight="2"

            />

        <TextView
            android:text="done"
            style="@style/calcButtonLand"
            android:layout_weight="1"
            android:backgroundTint="@color/darkGray"
            android:textSize="40dp"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        >
        <Button
            android:text="7"
            style="@style/calcButtonLand"

            />
        <Button
            android:text="8"
            style="@style/calcButtonLand"

            />
        <Button
            android:text="9"
            style="@style/calcButtonLand"
            />
        <Button
            android:text="\"
            style="@style/calcButtonLand"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        >

        <Button
            android:text="4"
            style="@style/calcButtonLand"
            />
        <Button
            android:text="5"
            style="@style/calcButtonLand"
            />
        <Button
            android:text="6"
            style="@style/calcButtonLand"
            />
        <Button
            android:text="x"
            style="@style/calcButtonLand"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        >

        <Button
            android:text="1"
            style="@style/calcButtonLand"
            />

        <Button
            android:text="2"
            style="@style/calcButtonLand"
            />

        <Button
            android:text="3"
            style="@style/calcButtonLand"
            />
        <Button
            android:text="+"
            style="@style/calcButtonLand"

            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:text=""
        />


</LinearLayout>


    ntLayout>